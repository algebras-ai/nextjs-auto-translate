{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",

    "outDir": "dist",
    "rootDir": "src",

    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,

    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/index.cjs.ts"
  ]
}
